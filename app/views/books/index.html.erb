<!-- フラッシュメッセージ表示 -->
<div>
  <%= flash[:notice] %>
</div><h1 class="main-title">Books</h1>

<!-- 投稿一覧表示 -->
<p class="index-title">Title</p>
<p class="index-body">Body</p>

<% @books.each do |list| %>
  <span><%= list.title %></span>
  <span><%= list.body %></span>

  <!-- Showへのリンク -->
  <%= link_to 'Show', book_path(list.id) %>
  <!-- Editへのリンク -->
  <%= link_to 'Edit', edit_book_path(list.id) %>
  <!-- Destroyへのリンク -->
  <%= link_to 'Destroy', destroy_book_path(list.id), method: :delete, "data-confirm" => "Are you sure?" %>
<% end %>


<!-- 新規投稿部分 -->
<h2 class="sub-title">New book</h2>

<!-- エラーメッセージ -->
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!-- 投稿部分 -->
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>