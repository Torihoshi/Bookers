<h1>Books</h1>

<!-- 一覧部分 -->
<p class="index-title">Title</p>
<p class="index-body">Body</p>
<% @books.each do |book| %>
  <span><%= book.title %></span>
  <span><%= book.body %></span>
  <span><%= link_to 'Show', book_path(book.id) %></span>
  <%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>


<% end %>



<!-- 投稿部分 -->
<h2 class="sub-title">New book</h2>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>