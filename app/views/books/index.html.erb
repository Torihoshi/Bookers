<h1>Books</h1>

<!-- 一覧部分 -->
<p class="index-title">Title</p>
<% @books.each do |list| %>
  <span><%= list.title %></span>
<% end %>

<p class="index-body">Body</p>
<% @books.each do |list| %>
  <span><%= list.body %></span>
<% end %>


<!-- 投稿部分 -->
<h2 class="sub-title">New book</h2>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>